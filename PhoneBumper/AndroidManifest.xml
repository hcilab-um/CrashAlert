<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.umanitoba.cs.hci.phonebumper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    
    <uses-permission android:name="android.permission.BLUETOOTH" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".PhoneBumperActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".SettingsActivity"
            android:label="@string/settings_title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ca.umanitoba.cs.hci.phonebumper.SettingsActivity" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".SelectBumperImageActivity"
            android:label="@string/select_bumper_title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ca.umanitoba.cs.hci.phonebumper.SelectBumperImageActivity" />
            </intent-filter>
        </activity>
    </application>

</manifest>